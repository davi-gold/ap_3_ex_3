
@{
    ViewBag.Title = "display";
}


<html>
<head>
    <style>
        img, canvas {
            min-height: 100%;
            min-width: 100%;
            height: 100%;
            width: 100%;
            position: absolute;
            top: -100%;
            bottom: -100%;
            left: -100%;
            right: -100%;
            margin: auto;
            z-index: -1;
        }

        html, body {
            margin: 0;
            height: 100%;
            overflow: hidden;
        }
        .circle {
            position: absolute;
            border: 1px solid black;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: #e74c3c;
        }
    </style>
</head>
<body>
    <script>
        var width = screen.width;
        var height = screen.height;
        var lon = '@ViewBag.lon'
        var lat = '@ViewBag.lat'
        lon = (lon + 180) * (360 / width);
        lat = (lat + 90) * (180 / height);
        '@ViewBag.lon' = lon;
        '@ViewBag.lat' = lat;

    </script>
    <img src="~/export-map-share.png" alt="pic">
    <div style="top:@(ViewBag.lon)%px; left:@(ViewBag.lat)%px;" class="circle"></div>
    <a>@ViewBag.lon </a>
    <canvas id="canvas"></canvas>

</body>
</html>

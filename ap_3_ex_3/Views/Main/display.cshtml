
@{
    ViewBag.Title = "display";
}

<html>
<head>
    <style>
        img, canvas {
            min-height: 100%;
            min-width: 100%;
            height: 100%;
            width: 100%;
            position: absolute;
            top: -100%;
            bottom: -100%;
            left: -100%;
            right: -100%;
            margin: auto;
            z-index: -1;
        }

        html, body {
            margin: 0;
            height: 100%;
            overflow: hidden;
        }

        .circle {
            position: absolute;
            border: 1px solid black;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: #e74c3c;
        }
    </style>

    <script>
        var width = screen.width;
        var height = screen.height;

        function normalize() {
            var circle = document.getElementById("myCircle");
            var lon = ('@ViewBag.lon' + 180) * (360 / width);
            var lat = ('@ViewBag.lat' + 180) * (360 / width);
            circle.style.top = lon;
            circle.style.left = lat;
        }
    </script>

</head>
<body onload= "normalize()">
    <img src="~/export-map-share.png" alt="pic">
    <div class="circle" id="myCircle"></div>
    <canvas id="canvas"></canvas>
</body>
</html>